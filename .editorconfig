# EditorConfig helps maintain consistent coding styles across editors and IDEs
# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 100

[*.{yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[Makefile]
indent_style = tab

[*.{json,js}]
indent_size = 2

[Dockerfile]
indent_size = 2

[*.sh]
indent_size = 2
